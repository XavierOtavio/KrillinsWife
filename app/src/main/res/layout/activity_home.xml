<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingHorizontal="24dp"
    android:paddingVertical="48dp"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/Hello"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bem vindo, Xavier"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        app:draggedItem="@id/drag_item"
        app:layout_constraintTop_toBottomOf="@id/Hello"
        app:leftItem="@id/left_view"
        app:rightItem="@id/right_view"
        app:swipeDirection="left|right">

        <ImageView
            android:id="@+id/right_view"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#ff5722"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/left_view"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorSecondaryDark"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/drag_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Krillin first wife"
            android:textSize="20sp" />

    </com.zerobranch.layout.SwipeLayout>

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/swipe_layout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        app:draggedItem="@id/drag_item2"
        app:layout_constraintTop_toBottomOf="@id/swipe_layout"
        app:leftItem="@id/left_view2"
        app:rightItem="@id/right_view2"
        app:swipeDirection="left|right">

        <ImageView
            android:id="@+id/right_view2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#ff5722"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/left_view2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorSecondaryDark"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/drag_item2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Krillin second wife"
            android:textSize="20sp" />

    </com.zerobranch.layout.SwipeLayout>

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/swipe_layout3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        app:draggedItem="@id/drag_item3"
        app:layout_constraintTop_toBottomOf="@id/swipe_layout2"
        app:leftItem="@id/left_view3"
        app:rightItem="@id/right_view3"
        app:swipeDirection="left|right">

        <ImageView
            android:id="@+id/right_view3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#ff5722"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/left_view3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorSecondaryDark"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/drag_item3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Krillin third wife"
            android:textSize="20sp" />

    </com.zerobranch.layout.SwipeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>